<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearlatout1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/grad_bg">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle"
                    android:padding="10dp"
                    android:tint="@color/white"
                    android:src="@drawable/note"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Register"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
            <ImageView
                android:id="@+id/imageview2"
                android:layout_below="@id/linearlatout1"
                android:rotation="45"
                android:layout_marginTop="-10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/square"
                android:layout_centerHorizontal="true"
                />
            <RelativeLayout
                android:id="@+id/relativel0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageview2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"

                android:layout_marginTop="30dp">
                <ImageView
                    android:id="@+id/nameicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/grad_bg"
                    android:padding="8dp"
                    android:src="@drawable/ic_perm_identity_black_24dp"
                    android:tint="@color/white"
                    />
                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:background="@color/bluish"
                    android:layout_toRightOf="@+id/nameicon"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:layout_alignBottom="@+id/nameicon"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativel0"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"

                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/imageviewicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/grad_bg"
                    android:padding="8dp"
                    android:src="@drawable/ic_email_black_24dp"
                    android:tint="@color/white"
                    />
                <EditText
                    android:id="@+id/phoneno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone no"
                    android:inputType="textEmailAddress"
                    android:background="@color/bluish"
                    android:layout_toRightOf="@+id/imageviewicon"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:layout_alignBottom="@+id/imageviewicon"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativel1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/passwordicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/grad_bg"
                    android:padding="8dp"
                    android:src="@drawable/ic_person_black_24dp"
                    android:tint="@color/white"
                    />
                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:background="@color/bluish"
                    android:layout_toRightOf="@+id/passwordicon"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:layout_alignBottom="@+id/passwordicon"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativel2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/reppasswordicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/grad_bg"
                    android:padding="8dp"
                    android:src="@drawable/ic_lock_outline_black_24dp"
                    android:tint="@color/white"
                    />
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:background="@color/bluish"
                    android:layout_toRightOf="@+id/reppasswordicon"
                    android:inputType="textPassword"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:layout_alignBottom="@+id/reppasswordicon"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativel4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativel3"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/phonenoicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/grad_bg"
                    android:padding="8dp"
                    android:src="@drawable/ic_lock_outline_black_24dp"
                    android:tint="@color/white"
                    />
                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Confirm Password"
                    android:background="@color/bluish"
                    android:layout_toRightOf="@+id/phonenoicon"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:layout_alignBottom="@+id/phonenoicon"

                    />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_regist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativel4"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="SIGN UP"
                android:background="@drawable/grad_bg"
                android:textColor="@color/white"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>